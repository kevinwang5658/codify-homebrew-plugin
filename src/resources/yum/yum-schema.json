{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://www.codifycli.com/yum.json",
  "$comment": "https://docs.codifycli.com/core-resources/yum/",
  "title": "Yum resource",
  "description": "Manage yum packages on Red Hat-based systems.",
  "type": "object",
  "properties": {
    "install": {
      "type": "array",
      "description": "Installs packages using yum.",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "version": { "type": "string" }
            },
            "required": ["name"]
          }
        ]
      }
    },
    "update": {
      "type": "boolean",
      "description": "Whether to run yum check-update before installing packages. Defaults to true."
    }
  },
  "additionalProperties": false
}
