{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://www.codifycli.com/terraform.json",
  "$comment": "https://docs.codifycli.com/core-resources/terraform/",
  "title": "Terraform resource",
  "description": "Installs Terraform.",
  "type": "object",
  "properties": {
    "directory": {
      "type": "string",
      "description": "The directory to install Terraform. Defaults to /usr/local/bin."
